<div class="user-profile d-flex justify-content-center">
  <div class="image-container d-flex align-items-center">
    {{#if user.image}}
      <img src="{{user.image}}" width="250" alt="user-image">
    {{else}}
      <img src="/image/alphacamp_logo.png" width="250" alt="user-image">
    {{/if}}  
  </div>
  <div class="profile p-5">
    <h3>{{user.name}}</h3>
    <h3>{{user.email}}</h3>
    <h3>已評論餐廳數: {{sum commentedRestaurants}}</h3>
    <h3>收藏餐廳數: {{sum user.FavoritedRestaurants}}</h3>
    <h3>{{sum user.Followings}} followings (追蹤者)</h3>
    <h3>{{sum user.Followers}} followers (追隨者)</h3>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
  </div>
</div>
<div class="row">
  <div class="col-5">
    <div class="followings-container mt-5 bg-white border">
        <h3 class="text-center bg-light">{{sum user.Followings}} followings (追蹤者)</h3>
        <div class="commented-restaurant d-flex flex-wrap justify-content-center">
          {{#each user.Followings}}
            <a href="/users/{{this.id}}">
              {{#if this.image}}
                <img src="{{this.image}}" class="m-1" alt="follower-image" width="100">
              {{else}}
                <img src="/image/alphacamp_logo.png" class="m-1" alt="follower-image" width="100">
              {{/if}}
            </a>
          {{/each}}
        </div>
      </div>
      <div class="followers-container mt-5 bg-white border">
        <h3 class="text-center bg-light">{{sum user.Followers}} followers (追隨者)</h3>
        <div class="commented-restaurant d-flex flex-wrap justify-content-center">
          {{#each user.Followers}}
            <a href="/users/{{this.id}}">
              {{#if this.image}}
                <img src="{{this.image}}" class="m-1" alt="follower-image" width="100">
              {{else}}
                <img src="/image/alphacamp_logo.png" class="m-1" alt="follower-image" width="100">
              {{/if}}
            </a>
          {{/each}}
        </div>
      </div>
  </div>

  <div class="col-7">
      <div class="commented-restaurant-container mt-5 bg-white border">
        <h3 class="text-center bg-light">{{sum commentedRestaurants}} 已評論餐廳</h3>
        <div class="commented-restaurant d-flex flex-wrap justify-content-center">
          {{#each commentedRestaurants}}
            <a href="/restaurants/{{this.Restaurant.id}}">
              <img src="{{this.Restaurant.image}}" class="m-1" alt="restaurant-image" width="100">
            </a>
          {{/each}}
        </div>
      </div>
 
    <div class="favorited-restaurant-container mt-5 bg-white border">
      <h3 class="text-center bg-light">{{sum user.FavoritedRestaurants}} 收藏的餐廳</h3>
      <div class="commented-restaurant d-flex flex-wrap justify-content-center">
        {{#each user.FavoritedRestaurants}}
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" class="m-1" alt="restaurant-image" width="100">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
  


